{
  "project": {
    "name": "TaskFlow",
    "version": "0.1.0"
  },
  "context": {
    "entryPoints": [
      "frontend/src/main.tsx",
      "backend/src/server.ts"
    ],
    "criticalPaths": [
      "frontend/src/components",
      "frontend/src/store",
      "backend/src/api",
      "backend/src/services",
      "backend/src/ai"
    ]
  },
  "files": {
    "include": [
      "**/*.{ts,tsx,js,jsx,json,md}"
    ],
    "exclude": [
      "**/node_modules/**",
      "**/dist/**",
      "**/.git/**",
      "**/build/**",
      "**/.DS_Store"
    ]
  }
}