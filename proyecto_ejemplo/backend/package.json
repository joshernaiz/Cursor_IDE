{
  "name": "taskflow-backend",
  "version": "1.0.0",
  "description": "TaskFlow - Backend API con Express, MongoDB y capacidades de IA",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "dev:docker": "tsx watch --clear-screen=false src/index.ts",
    "dev:debug": "tsx watch --inspect=0.0.0.0:9229 src/index.ts",
    "build": "tsc && tsc-alias",
    "build:dev": "tsc --sourceMap && tsc-alias",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "lint": "eslint src --ext .ts --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.{ts,js,json}",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "db:seed": "tsx src/scripts/seed-database.ts",
    "db:reset": "tsx src/scripts/reset-database.ts"
  },
  "keywords": [
    "taskflow",
    "api",
    "express",
    "mongodb",
    "typescript",
    "ai",
    "task-management"
  ],
  "author": "TaskFlow Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.0.3",
    "cors": "^2.8.5",
    "helmet": "^6.1.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "zod": "^3.21.4",
    "winston": "^3.8.2",
    "rate-limiter-flexible": "^2.4.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^6.15.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.0",
    "nodemailer": "^6.9.1",
    "ioredis": "^5.3.1",
    "bull": "^4.10.4",
    "socket.io": "^4.6.1",
    "express-async-errors": "^3.1.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.11",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/morgan": "^1.9.4",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/multer": "^1.4.7",
    "@types/nodemailer": "^6.4.7",
    "@types/jest": "^29.5.0",
    "@types/supertest": "^2.0.12",
    "typescript": "^5.0.2",
    "tsx": "^3.12.6",
    "tsc-alias": "^1.8.6",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.7",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^8.12.2",
    "nodemon": "^2.0.22"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/taskflow/backend.git"
  },
  "bugs": {
    "url": "https://github.com/taskflow/backend/issues"
  },
  "homepage": "https://github.com/taskflow/backend#readme"
} 