# Development Environment Variables - TaskFlow Frontend
# AI-Hint Component: [Dev Environment] [Hot reload configuration] [Development-specific settings]

# Development mode flag
NODE_ENV=development

# Vite development server
VITE_DEV_SERVER_PORT=3001
VITE_DEV_SERVER_HOST=0.0.0.0

# API Configuration for development
VITE_API_URL=http://localhost:3000/api
VITE_API_TIMEOUT=10000

# Hot Module Replacement
VITE_HMR_PORT=3001
VITE_HMR_HOST=localhost

# Development features
VITE_DEV_TOOLS=true
VITE_ENABLE_SOURCE_MAPS=true
VITE_ENABLE_POLLING=true

# MCP Configuration (development)
VITE_MCP_ENABLED=true
VITE_MCP_DEV_MODE=true

# Logging
VITE_LOG_LEVEL=debug

# Performance monitoring in development
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Error tracking
VITE_ENABLE_ERROR_BOUNDARY=true

# Development database mock
VITE_USE_MOCK_DATA=false 