{
  "name": "taskflow-frontend",
  "version": "1.0.0",
  "description": "TaskFlow - Frontend React con capacidades de IA",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 3001 --force",
    "dev:docker": "vite --host 0.0.0.0 --port 3001 --force --clearScreen false",
    "dev:fast": "vite --host 0.0.0.0 --port 3001 --force --no-deps",
    "build": "vite build",
    "build:with-types": "tsc && vite build",
    "build:dev": "tsc && vite build --mode development",
    "preview": "vite preview --host 0.0.0.0 --port 3001",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,js,jsx,json,css,md}",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.vite",
    "restart": "npm run clean && npm install && npm run dev"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "@reduxjs/toolkit": "^1.9.3",
    "react-redux": "^8.0.5",
    "react-hook-form": "^7.43.5",
    "@hookform/resolvers": "^2.9.11",
    "zod": "^3.20.6",
    "@headlessui/react": "^1.7.13",
    "@heroicons/react": "^2.0.16",
    "framer-motion": "^10.2.4",
    "clsx": "^1.2.1",
    "date-fns": "^2.29.3",
    "react-hot-toast": "^2.4.0",
    "react-helmet-async": "^1.3.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/node": "^18.15.3",
    "@vitejs/plugin-react": "^3.1.0",
    "vite": "^4.1.4",
    "typescript": "^4.9.5",
    "tailwindcss": "^3.2.7",
    "postcss": "^8.4.21",
    "autoprefixer": "^10.4.14",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "prettier": "^2.8.4",
    "prettier-plugin-tailwindcss": "^0.2.4",
    "jest": "^29.5.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "jest-environment-jsdom": "^29.5.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.0",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
} 